<h2>{{currentUser.Name}}</h2>
<div class="row" id="photos">
    <div class="col-lg-3 ">
        <form>
            <input type="file"
                   file-input="file"
                   accept=".jpg,.png,.gif" />
            <button ng-click="upload()">Add</button>
        </form>
    </div>
    <div class="col-lg-3 " ng-repeat="photo in currentUser.UploadFiles">
        <img class="img-thumbnail" ng-src="api/users/{{photo.UserId}}/files/{{photo.Id}}" /> 

        <button type="button" class="close" aria-label="Close" ng-click="deletePhoto(photo.Id, $index)"><span aria-hidden="true">&times;</span></button>
    </div>
</div>