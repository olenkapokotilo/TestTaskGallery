<div class="container">
    <h2>{{currentUser.Name}}</h2>
    <div class="row" >
        <div class="col-lg-3 ">
            <form>
                <input type="file"
                       file-input="file"
                       accept=".jpg,.png,.gif" />@*TODO: not do*@
                <button ng-click="upload()">Add</button>
            </form>
        </div>
        <div class="col-lg-3 " ng-repeat="file in currentUser.UploadFiles">
            <img class="img-thumbnail" ng-src="api/users/{{file.UserId}}/files/{{file.Id}}" />
            <button type="button" class="close" aria-label="Close" ng-click="deleteFile(file.Id, $index)"><span aria-hidden="true">&times;</span></button>
        </div>
    </div>
</div>